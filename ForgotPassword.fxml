<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.gearrentpro.controller.auth.ForgotPasswordController"
      spacing="20" alignment="CENTER" style="-fx-padding: 40;">
    
    <Text text="Reset Password" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <Text text="Enter your email to reset password" style="-fx-font-size: 14px; -fx-fill: #666;" />
    
    <TextField fx:id="txtEmail" promptText="Email address" style="-fx-pref-width: 300;" />
    <Label fx:id="lblMessage" style="-fx-text-fill: green;" visible="false" />
    
    <HBox spacing="10">
        <Button text="Send Reset Link" onAction="#onSendClicked" 
                style="-fx-background-color: #1e3c72; -fx-text-fill: white;" />
        <Button text="Cancel" onAction="#onCancelClicked" />
    </HBox>
</VBox>
