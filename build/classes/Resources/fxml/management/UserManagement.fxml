<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.gearrentpro.controller.management.UserManagementController"
      spacing="20" style="-fx-padding: 20;">
    
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Text text="User Management" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="Add User" onAction="#onAddUserClicked" 
                style="-fx-background-color: #1e3c72; -fx-text-fill: white;" />
    </HBox>
    
    <HBox spacing="10">
        <TextField fx:id="txtSearch" promptText="Search users..." HBox.hgrow="ALWAYS" />
        <Button text="Search" onAction="#onSearchClicked" />
    </HBox>
    
    <TableView fx:id="tblUsers" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" />
            <TableColumn text="Username" />
            <TableColumn text="Role" />
            <TableColumn text="Status" />
            <TableColumn text="Actions" />
        </columns>
    </TableView>
</VBox>
