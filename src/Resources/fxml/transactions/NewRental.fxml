<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.gearrentpro.controller.transactions.NewRentalController"
      spacing="20" style="-fx-padding: 20;">
    
    <Text text="New Rental" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    
    <GridPane hgap="15" vgap="15">
        <Label text="Customer:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <ComboBox fx:id="cmbCustomer" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Equipment:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <ComboBox fx:id="cmbEquipment" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <DatePicker fx:id="dpStartDate" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <DatePicker fx:id="dpEndDate" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>
    
    <Label fx:id="lblAmount" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <HBox spacing="10">
        <Button text="Calculate" onAction="#onCalculateClicked" />
        <Button text="Create Rental" onAction="#onCreateClicked" 
                style="-fx-background-color: #1e3c72; -fx-text-fill: white;" />
        <Button text="Cancel" onAction="#onCancelClicked" />
    </HBox>
</VBox>
